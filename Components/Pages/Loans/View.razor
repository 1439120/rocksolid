    public string? Id { get; set; }
    private Applicant applicant = new();
    private List<Installment> installments = new ();


    protected override async Task OnInitializedAsync()
    {
        if(!string.IsNullOrEmpty(Id)){
            var getApplicant = await ApplicantService.GetApplicantByID(Id);
            if(getApplicant != null) applicant = getApplicant;

            installments = await InstallService.GetInstallments(applicant.Id);
        }
            

    }

