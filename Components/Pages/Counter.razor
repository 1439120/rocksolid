@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="()=>currentCount++">Click me</button>

<div class="m-4">
    <input type="text" @bind="text" @bind:event="oninput" @bind:after="Search"/>
    <p>@text</p>
</div>

<div style="border: 1px solid black;" @onmousemove="HandleMouseOver">
    <p>@divText</p>
</div>
<p>@results</p>

@code {
    private int currentCount = 0;
    string text="";
    string divText = "";
    string results = "";

    [Parameter]
    public int IncrementAmount{get; set;}=1;
    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }

    private void HandleInput(ChangeEventArgs e){
        text = (string)e.Value!;
    }

    private void HandleMouseOver(MouseEventArgs e){
        @* text = (string)e.Value!; *@
        divText="You are hovering over my div";
    }

    private void HandleKeyDown(KeyboardEventArgs e){
        @* text = (string)e.Value!; *@
        text=e.Key;
    }

     private void HandleFocus(FocusEventArgs e){
        @* text = (string)e.Value!; *@
        text="You are typing...";
    }

     private void HandleBlur(FocusEventArgs e){
        @* text = (string)e.Value!; *@
        text="You are not typing. You have clicked away";
    }

    async Task Search(){
        await Task.Delay(3000);
        results="150 results found";
    }



}
