@page "/students"
@using BlazorApp.Models
@using BlazorApp.Services
@inject StudentService StudentService

<h3>Student List</h3>

<div class="mb-3">
    <input @bind="newStudent.Name" placeholder="Name" class="form-control" />
    <input @bind="newStudent.Email" placeholder="Email" class="form-control mt-2" />
    <button @onclick="AddStudent" class="btn btn-primary mt-2">Add</button>
</div>

@if (students == null)
{
    <p>Loading...</p>
}
else
{
    <div class="todo-list">
        @foreach (var student in students)
        {
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title">
                        @* <input type="checkbox" @bind="todo.IsCompleted" @onchange="@(() => ToggleTodo(todo))" />
                        @todo.Title *@
                        <input type="text" name="name" @bind="student.Name"/>
                    </h5>
                    <p class="card-text">@student.Email</p>
                    <small>Date of Birth: @student.Birthday</small>
                    <button @onclick="@(() => DeleteTodo(student.Id))" class="btn btn-danger btn-sm float-end">Delete</button>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Student> students = new();
    private Student newStudent = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
        
        // Optional: Set up real-time listener
        StudentService.ListenToTodos(async (snapshot) =>
        {
            students = snapshot.Documents
                .Select(document => document.ConvertTo<Student>())
                .ToList();
            await InvokeAsync(StateHasChanged);
        });
    }

    private async Task LoadStudents()
    {
        students = await StudentService.GetAllTodosAsync();
    }

    private async Task AddStudent()
    {
        if (!string.IsNullOrWhiteSpace(newStudent.Name))
        {
            await StudentService.AddTodoAsync(newStudent);
            newStudent = new Student(); // Reset form
            await LoadStudents();
        }
    }

    @* private async Task ToggleTodo(TodoItem todo)
    {
        await TodoService.UpdateTodoAsync(todo);
    } *@

    private async Task DeleteTodo(string id)
    {
        await StudentService.DeleteTodoAsync(id);
        await LoadStudents();
    }
}