@using BlazorApp.Models
@* @rendermode InteractiveServer *@
@inject ApplicationService ApplicationDbService
@inject InstallmentService InstallService

@if(Headers.Length == 0){
    <div>
        Loading...
    </div>
}else if(Rows.Count == 0){
    <div>No records found</div>
}
else{
<table class="t-class table">
    <thead class="t-head">
        <tr>
            @foreach(var header in Headers){
                <th>@header</th>
            }
        </tr>
    </thead>
    <tbody>
            @foreach(var row in Rows){
                <tr>
                    @foreach (var propName in PropertyNames)
                        {
                            <td>@GetPropertyValue(row, propName)</td>
                        }
                    @if(Headers.Contains("Action")){
                        <td><button class="btn btn-primary" @onclick="()=>ApproveRow(row)" disabled="@loading">Approve</button></td>
                    }
                        
                </tr>
            }
    </tbody>
</table>
}
<p>@message</p>
@code {
    [Parameter] public string[] Headers{get; set;} = [];
    [Parameter] public List<object> Rows{get; set;} = new();
    [Parameter] public string[] PropertyNames { get; set; } = [];
    string? message;
    bool loading = false;

    private object GetPropertyValue(object item, string propertyName)
    {
        var property = item.GetType().GetProperty(propertyName);
        return property?.GetValue(item) ?? "-";
    }

    private async Task ApproveRow(Object row){
         if (row is Applicant applicant)
        {
            loading = true;
            await ApplicationDbService.UpdateApplicantFieldsAsync(applicant.Id, new Dictionary<string, object>{
              {"RemainingAmount", applicant.RequestedAmount},
              {"Status", "Approved"},
              {"ApprovedDate", DateTime.UtcNow},
              {"UpdatedAt", DateTime.UtcNow},
              {"Reference", $"LOAN/{DateTime.UtcNow:yyyyMMdd}/{Guid.NewGuid().ToString("N")[..4].ToUpper()}"},
              {"StartDate", GetNextMonthStart()},
              {"EndDate", GetEndOfPeriod(applicant.NumberOfPayments)}
            });
            applicant.Approve();
            message = "Application Approved Successfully";

            foreach(var installment in GetInstallments(applicant.NumberOfPayments, applicant.MonthlyRepayment)){
                installment.ApplicantId = applicant.Id;
                await InstallService.Add(installment);
            }
            loading = false;
            message = "Installments generated successully";
        }
    }

    private bool ButtonDisabled(Object row){
         if (row is Applicant applicant)
        {
            if(applicant.Status == "Approved"){
                return true;
            }
            return false;
        }
        return false;
    }

    private DateTime GetNextMonthStart()
    {
        // Get the first day of next month at 00:00:00
        var today = DateTime.Today;
        var nextMonth = today.Month == 12 
            ? new DateTime(today.Year + 1, 1, 1)  // January next year
            : new DateTime(today.Year, today.Month + 1, 1);  // First day of next month
        
        return DateTime.SpecifyKind(nextMonth, DateTimeKind.Utc);
    }
    private DateTime GetEndOfPeriod(int noInstall)
    {
        // Calculate end date based on number of installments from next month start
        var startDate = GetNextMonthStart();
        
        // Add the number of installments as months, then subtract 1 day to get the end of the period
        var endDate = startDate.AddMonths(noInstall).AddDays(-1);
        
        return DateTime.SpecifyKind(endDate, DateTimeKind.Utc);
    }

    private List<Installment> GetInstallments(int noInstall, float loanAmount){

        var installments = new List<Installment>();
        var startDate = DateTime.Today;

        for(int i = 1; i < noInstall; i++){

            var nextMonth = startDate.AddMonths(i);
            int lastDay = DateTime.DaysInMonth(nextMonth.Year, nextMonth.Month);
            @* var paymentDate = new DateTime(nextMonth.Year, nextMonth.Month, lastDay); *@
            var paymentDate = new DateTime(nextMonth.Year, nextMonth.Month, lastDay, 0, 0, 0, DateTimeKind.Utc);

            installments.Add(new Installment{
                PaymentDate= paymentDate, Amount=loanAmount
            });
        }
        return installments;
    }

}